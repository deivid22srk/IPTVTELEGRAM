<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scanner_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/title_background"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="ðŸ¤– SCANNER MUNDO DOS BOTS ðŸ¤–"
            android:textColor="@color/scanner_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:shadowColor="#21adee"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/scanner_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:strokeColor="#14beff38"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/panelInputLayout"
                    style="@style/ScannerTextInput"
                    android:hint="@string/panel_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/panelEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:textColor="@color/scanner_light_blue"
                        android:fontFamily="@font/share_tech_mono"
                        android:letterSpacing="0.02"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fileInputLayout"
                    style="@style/ScannerTextInput"
                    android:hint="@string/file_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/scanner_light_blue"
                        android:fontFamily="@font/share_tech_mono"
                        android:letterSpacing="0.02"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/speed_label"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/speedSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/speed_options"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"/>

                <LinearLayout
                    android:id="@+id/proxyOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/proxy_options_background"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/proxy_options"
                        android:textColor="@color/md_theme_light_onPrimaryContainer"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/proxyRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_proxy"
                            android:checked="true"
                            android:textColor="@color/md_theme_light_onPrimaryContainer"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioGithub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/github_proxy"
                            android:textColor="@color/md_theme_light_onPrimaryContainer"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/file_proxy"
                            android:textColor="@color/md_theme_light_onPrimaryContainer"/>

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/proxyUrlInputLayout"
                        style="@style/ScannerTextInput"
                        android:hint="URL do arquivo de proxies no GitHub"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/proxyUrlEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textColor="@color/scanner_light_blue"
                            android:fontFamily="@font/share_tech_mono"
                            android:letterSpacing="0.02"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/proxyFileInputLayout"
                        style="@style/ScannerTextInput"
                        android:hint="Caminho do arquivo de proxies"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/proxyFileEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/scanner_light_blue"
                            android:fontFamily="@font/share_tech_mono"
                            android:letterSpacing="0.02"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startScanButton"
                    style="@style/ScannerButton"
                    android:text="@string/start_scan"
                    android:enabled="false"
                    app:backgroundTint="@color/scanner_dark_blue"
                    app:cornerRadius="9dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/orbitron_bold"
                    android:letterSpacing="0.04"
                    android:shadowColor="#008ed9"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopScanButton"
                    style="@style/ScannerButton"
                    android:text="@string/stop_scan"
                    android:enabled="false"
                    app:backgroundTint="@color/md_theme_dark_errorContainer"
                    app:cornerRadius="9dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/orbitron_bold"
                    android:letterSpacing="0.04"/>

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/status_background"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/status_stopped"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.04"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/copyAllButton"
                    style="@style/ScannerButton"
                    android:text="@string/copy_all"
                    android:visibility="gone"
                    app:backgroundTint="@color/scanner_dark_blue"
                    app:cornerRadius="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/orbitron_bold"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:id="@+id/hitsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

