<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:clipToPadding="false">

        <!-- Hero Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- App Icon/Logo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚀"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scanner IPTV Pro"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:fontFamily="@font/orbitron_bold"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Escaneie painéis IPTV com múltiplos bots em paralelo\nSuporta arquivos grandes (200MB+) sem limitações"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:gravity="center"
                    android:alpha="0.9"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Configuration Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Panels Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌍"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Painéis IPTV"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:fontFamily="@font/orbitron_bold" />

                </LinearLayout>

                <!-- Panels Container -->
                <LinearLayout
                    android:id="@+id/panelsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- Add Panel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addPanelButton"
                    style="@style/Widget.Material3.Button.TonalButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Adicionar Painel"
                    android:layout_gravity="start"
                    app:icon="@android:drawable/ic_input_add"
                    app:cornerRadius="24dp"
                    android:fontFamily="@font/orbitron_bold" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="24dp"
                    android:alpha="0.5" />

                <!-- Files Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📁"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Configuração de Arquivos"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:fontFamily="@font/orbitron_bold" />

                </LinearLayout>

                <!-- File Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fileInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Arquivo de Combos"
                    app:startIconDrawable="@android:drawable/ic_menu_upload"
                    app:helperText="✅ Suporte para arquivos grandes (até 200MB+)"
                    app:helperTextTextColor="?attr/colorPrimary"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:fontFamily="@font/share_tech_mono"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Speed Selector -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/speedSpinnerLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Velocidade de Scan (Bots)"
                    app:startIconDrawable="@android:drawable/ic_menu_preferences"
                    app:helperText="⚡ Mais bots = maior velocidade, mas maior uso de recursos"
                    app:helperTextTextColor="?attr/colorSecondary"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <AutoCompleteTextView
                        android:id="@+id/speedSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:fontFamily="@font/orbitron_bold" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Proxy Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant">

            <LinearLayout
                android:id="@+id/proxyOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Proxy Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔌"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Opções de Proxy"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:fontFamily="@font/orbitron_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opcional"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorSecondary"
                        android:background="?attr/colorSecondaryContainer"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:alpha="0.8" />

                </LinearLayout>

                <!-- Radio Group with Modern Style -->
                <RadioGroup
                    android:id="@+id/proxyRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioNone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sem Proxy (Recomendado)"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:checked="true"
                        android:paddingVertical="8dp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioGithub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista de Proxies do GitHub"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:paddingVertical="8dp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arquivo Local de Proxies"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:paddingVertical="8dp" />

                </RadioGroup>

                <!-- Proxy URL Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proxyUrlInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="URL do arquivo de proxies no GitHub"
                    android:visibility="gone"
                    app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                    app:helperText="🔗 Exemplo: https://raw.githubusercontent.com/user/repo/main/proxies.txt"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/proxyUrlEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:fontFamily="@font/share_tech_mono"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Proxy File Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proxyFileInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Caminho do arquivo de proxies"
                    android:visibility="gone"
                    app:startIconDrawable="@android:drawable/ic_menu_upload"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/proxyFileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:fontFamily="@font/share_tech_mono"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Controls Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorPrimary"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Action Buttons Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Controles de Scan"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:fontFamily="@font/orbitron_bold" />

                </LinearLayout>

                <!-- Main Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="24dp">

                    <!-- Start Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startScanButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:text="Iniciar Scan"
                        android:enabled="false"
                        android:fontFamily="@font/orbitron_bold"
                        android:textSize="16sp"
                        android:letterSpacing="0.02"
                        app:cornerRadius="20dp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconSize="24dp"
                        app:iconGravity="textStart" />

                    <!-- Stop Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stopScanButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Parar Scan"
                        android:enabled="false"
                        android:fontFamily="@font/orbitron_bold"
                        android:textSize="16sp"
                        android:letterSpacing="0.02"
                        app:cornerRadius="20dp"
                        app:icon="@android:drawable/ic_media_pause"
                        app:iconSize="24dp"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <!-- Status and Progress Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Status Icon and Text -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📊"
                                android:textSize="20sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/statusTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Aguardando configuração..."
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:fontFamily="@font/share_tech_mono"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!-- Progress Bar -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:indicatorColor="?attr/colorPrimary"
                            app:trackColor="?attr/colorOutlineVariant"
                            app:trackCornerRadius="8dp"
                            app:indicatorCornerRadius="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Copy All Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/copyAllButton"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Copiar Todos os Resultados"
                    android:visibility="gone"
                    android:fontFamily="@font/orbitron_bold"
                    android:textSize="16sp"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_menu_set_as"
                    app:iconSize="20dp"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Results Section -->
        <LinearLayout
            android:id="@+id/hitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp" />

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>