<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeFolderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar Pasta de Hits"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/telegramSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enviar hits para o Telegram"
        android:checked="true"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/telegramBotTokenLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Token do Bot do Telegram">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/telegramBotTokenEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="8245169261:AAHTUygk3X99DtXysRwkPcjM7cYo0-FNpcQ"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/telegramGroupIdLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="ID do Grupo do Telegram">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/telegramGroupIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="-1002710854837"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
