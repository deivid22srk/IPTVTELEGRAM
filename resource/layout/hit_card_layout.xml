<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#194b69"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:strokeColor="#52e8ffbb"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/hitTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ HIT ROBÔ ENCONTRADO"
            android:textColor="#19ffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/orbitron_bold"
            android:letterSpacing="0.06"
            android:paddingBottom="8dp"
            android:layout_marginBottom="7dp"
            android:shadowColor="#3be4ff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#21befe65"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/hitContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#deffff"
            android:textSize="16sp"
            android:fontFamily="@font/share_tech_mono"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Copiar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/orbitron_bold"
            android:letterSpacing="0.07"
            app:backgroundTint="#38e1fe"
            app:cornerRadius="5dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="7dp"
            android:shadowColor="#13163e"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

